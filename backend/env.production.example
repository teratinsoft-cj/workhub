# WorkHub Backend Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
# For SQLite (development only):
# DATABASE_URL=sqlite:///./workhub.db

# For PostgreSQL (production - REQUIRED):
# Format: postgresql://username:password@host:port/database
# Example:
DATABASE_URL=postgresql://workhub:your_secure_password@localhost:5432/workhub

# Security Settings
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
# Comma-separated list of allowed origins
# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=False

# Database Migration
# Set to True in production to use Alembic migrations only
USE_ALEMBIC=False

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

